<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ReactionSprintSelector">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="209dp"
        android:layout_height="62dp"
        android:layout_marginTop="40dp"
        android:fontFamily="monospace"
        android:text="REACTION SPRINTS"
        android:textAlignment="center"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <Button
        android:id="@+id/nav_compass_start_execute"
        android:layout_width="199dp"
        android:layout_height="62dp"
        android:layout_marginBottom="28dp"
        android:fontFamily="monospace"
        android:text="Start"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/nav_back_main"
        android:layout_width="64dp"
        android:layout_height="47dp"
        android:layout_marginTop="16dp"
        android:fontFamily="monospace"
        android:text="Back"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.046"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/reaction_description"
        android:layout_width="231dp"
        android:layout_height="116dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:fontFamily="monospace"
        android:text="You will be prompted to sprint after a delay of 3-8 seconds. Back-pedal or shuffle in place until you hear the prompt."
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.365" />

</androidx.constraintlayout.widget.ConstraintLayout>